# top-most EditorConfig file
root = true

# All Python files
[*.py]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Markdown, text
[*.{md,txt}]
trim_trailing_whitespace = false

# JSON, YAML, TOML configs
[*.{json,yml,yaml,toml}]
indent_style = space
indent_size = 2
